<LinearLayout android:id="@+id/LinearLayout01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:foo="http://schemas.android.com/apk/res/in.peerreview.flipnews"
    android:orientation="vertical">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.4"
        android:background="#ff0000" >
        <ImageView
            android:id="@+id/image"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#fff"
            android:scaleType="centerCrop"
            android:src="@drawable/blank" />
        <in.peerreview.flipnews.Custom.CustomTextView
            android:id="@+id/toc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|top"
            android:padding="10dp"
            android:text="&#xe164;"
            android:textColor="@color/green4"
            android:textSize="30dp"
            foo:customFont="fonts/MaterialIcons-Regular.ttf"/>
        <in.peerreview.flipnews.Custom.CustomTextView
            android:id="@+id/settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|top"
            android:padding="10dp"
            android:text="&#xe8b8;"
            android:textColor="@color/green4"
            android:textSize="30dp"
            foo:customFont="fonts/MaterialIcons-Regular.ttf"/>
    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.4"
         >
        <TextView android:text="Some text"
            android:id="@+id/text1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="28sp"
            android:padding="10dp"
            android:textAlignment="center"
            />
        <TextView android:text="Some text\n hello"
            android:layout_marginTop="80dp"
            android:id="@+id/text2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:textSize="18sp"
            android:padding="8dp"
            android:lineSpacingExtra="5dp"
            />
    </RelativeLayout>
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:id="@+id/below_btn"
            android:background="@color/green3"
            android:layout_below="@id/text2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:id="@+id/btn_groups">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">
            <in.peerreview.flipnews.Custom.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/mybutton"
                android:onClick="quickActionBtnClicked"
                android:padding="15dp"
                android:id="@+id/bookmark"
                android:text="&#xe866;"
                android:textColor="@color/white"
                android:textSize="21dp"
                foo:customFont="fonts/MaterialIcons-Regular.ttf"/>
            <in.peerreview.flipnews.Custom.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/mybutton"
                android:onClick="quickActionBtnClicked"
                android:padding="15dp"
                android:id="@+id/read"
                android:text="&#xe876;"
                android:textColor="@color/white"
                android:textSize="21dp"
                foo:customFont="fonts/MaterialIcons-Regular.ttf"/>
            <in.peerreview.flipnews.Custom.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/mybutton"
                android:onClick="quickActionBtnClicked"
                android:id="@+id/share"
                android:padding="15dp"
                android:text="&#xe80d;"
                android:textColor="@color/white"
                android:textSize="21dp"
                foo:customFont="fonts/MaterialIcons-Regular.ttf"/>
            </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:gravity="right"
            android:orientation="horizontal">
            <in.peerreview.flipnews.Custom.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/mybutton"
                android:onClick="quickActionBtnClicked"
                android:padding="15dp"
                android:id="@+id/details_btn"
                android:text="&#xe25a;"
                android:textColor="@color/white"
                android:textSize="21dp"
                foo:customFont="fonts/MaterialIcons-Regular.ttf"/>

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="70px"
                android:background="@drawable/mybutton"
                android:paddingTop="15dp"
                android:paddingRight="5dp"
                android:paddingLeft="5dp"
                android:id="@+id/provider_logo"
                android:visibility="gone"
                android:src="@drawable/anadabazar"/>
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:background="@drawable/mybutton"
                android:paddingTop="15dp"
                android:paddingRight="5dp"
                android:paddingLeft="5dp"
                android:id="@+id/news_count"
                android:textSize="15dp"
                android:textColor="#ffffff"
                android:text="10/100"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>