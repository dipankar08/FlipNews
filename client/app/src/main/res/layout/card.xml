<LinearLayout android:id="@+id/LinearLayout01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:foo="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.4"
        android:background="#ff0000" >
        <ImageView
            android:id="@+id/image"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#fff"
            android:scaleType="centerCrop"
            android:src="@drawable/blank" />
        <in.peerreview.flipnews.Custom.CustomTextView
            style="@style/MyButtonStyle"
            android:id="@+id/toc"
            android:layout_gravity="left|top"
            android:text="&#xe164;"
            android:textColor="@color/green4"
            android:textSize="30dp"/>
        <in.peerreview.flipnews.Custom.CustomTextView
            style="@style/MyButtonStyle"
            android:id="@+id/more_image_btn"
            android:layout_gravity="left|bottom"
            android:text="&#xe164;"
            android:textColor="@color/green4"
            android:textSize="30dp"/>
        <in.peerreview.flipnews.Custom.CustomTextView
            style="@style/MyButtonStyle"
            android:id="@+id/settings"
            android:layout_gravity="right|top"
             android:text="&#xe8b8;"
            android:textColor="@color/green4"
            android:textSize="30dp"/>
        <ImageView
            android:src="@drawable/logo"
            android:id="@+id/app_logo"
            android:layout_gravity="left|top"
            android:text="&#xe8b8;"
            android:textColor="@color/green4"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="5dp"
            android:layout_width="50dp"
            android:layout_height="50dp" />

    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.4"
         >
        <TextView android:text="Some text"
            android:id="@+id/text1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="28sp"
            android:padding="10dp"
            android:textAlignment="center"
            />
        <TextView android:text="Some text\n hello"
            android:layout_marginTop="80dp"
            android:id="@+id/text2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:textSize="18sp"
            android:padding="8dp"
            android:lineSpacingExtra="5dp"
            />
    </RelativeLayout>
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:id="@+id/below_btn"
            android:background="@color/green3"
            android:layout_below="@id/text2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:id="@+id/btn_groups">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">
                <in.peerreview.flipnews.Custom.CustomTextView
                    style="@style/MyButtonStyle"
                    android:id="@+id/bookmark"
                    android:text="&#xe866;"/>
                <in.peerreview.flipnews.Custom.CustomTextView
                    style="@style/MyButtonStyle"
                    android:id="@+id/read"
                    android:text="&#xe876;"/>
                <in.peerreview.flipnews.Custom.CustomTextView
                    style="@style/MyButtonStyle"
                    android:id="@+id/share"
                    android:text="&#xe80d;"/>
                <in.peerreview.flipnews.Custom.CustomTextView
                    style="@style/MyButtonStyle"
                    android:id="@+id/experiment"
                    android:text="&#xe80e;"/>
            </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:gravity="right"
            android:orientation="horizontal">
            <in.peerreview.flipnews.Custom.CustomTextView
                style="@style/MyButtonStyle"
                android:id="@+id/details_btn"
                android:text="&#xe25a;"/>

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="70px"
                android:background="@drawable/mybutton"
                android:paddingTop="15dp"
                android:paddingRight="5dp"
                android:paddingLeft="5dp"
                android:id="@+id/provider_logo"
                android:visibility="gone"
                android:src="@drawable/anadabazar"/>
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:background="@drawable/mybutton"
                android:paddingTop="15dp"
                android:paddingRight="5dp"
                android:paddingLeft="5dp"
                android:id="@+id/news_count"
                android:textSize="15dp"
                android:textColor="#ffffff"
                android:text="10/100"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>