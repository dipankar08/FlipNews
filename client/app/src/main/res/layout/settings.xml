<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="#000000"
    android:alpha="1.0"
    android:layout_height="match_parent"
    android:weightSum="1">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="  Settings"
        android:id="@+id/backToMainFromSettings"
        android:background="#000000"
        android:textColor="#FFFFFF"
        android:onClick="backMain"
        android:drawableLeft="@drawable/ic_settings_white_18dp"
        android:drawableRight="@drawable/ic_clear_white_18dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.02"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:textAllCaps="false"
        android:textAlignment="textStart"
        android:singleLine="false" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#FFFFFF"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:layout_height="70dp">

        <ToggleButton
            android:layout_width="0dp"
            android:state_focused="true"
            android:state_enabled="true"
            android:layout_height="fill_parent"
            android:paddingRight="3dp"
            android:id="@+id/notification"
            android:src="@drawable/ic_notifications_white_18dp"
            android:layout_weight="1"
            android:checked="true" />

        <ToggleButton
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:paddingRight="3dp"
            android:id="@+id/hdimage"
            android:src="@drawable/ic_image_white_18dp"
            android:layout_weight="1" />

        <ToggleButton
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:id="@+id/nightmode"
            android:src="@drawable/ic_wb_incandescent_white_18dp"
            android:layout_weight="1" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#FFFFFF"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="  My Account"
        android:id="@+id/myAccount"
        android:background="#000000"
        android:textColor="#FFFFFF"
        android:drawableLeft="@android:drawable/ic_menu_help"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.02"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingBottom="-10dp"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:singleLine="false" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="  Refresh cache"
        android:id="@+id/refresh"
        android:background="#000000"
        android:textColor="#FFFFFF"
        android:drawableLeft="@android:drawable/ic_menu_help"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.02"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingBottom="-10dp"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:singleLine="false" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="  Connect with Facebook"
        android:id="@+id/connectWithFacebook"
        android:background="#000000"
        android:textColor="#FFFFFF"
        android:drawableLeft="@android:drawable/ic_menu_help"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.02"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:singleLine="false" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#FFFFFF"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="  Invite your friends"
        android:id="@+id/inviteYourFriends"
        android:background="#000000"
        android:textColor="#FFFFFF"
        android:drawableLeft="@android:drawable/ic_menu_share"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.02"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:singleLine="false" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="  Rate this app"
        android:id="@+id/rateThisApp"
        android:background="#000000"
        android:textColor="#FFFFFF"
        android:drawableLeft="@android:drawable/ic_menu_myplaces"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.02"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:singleLine="false" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="  Feedback"
        android:id="@+id/feedback"
        android:background="#000000"
        android:textColor="#FFFFFF"
        android:drawableLeft="@android:drawable/ic_menu_edit"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.02"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:textAlignment="textStart"
        android:singleLine="false"
        android:textAllCaps="false"
        android:contextClickable="false" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="  Terms and conditions"
        android:id="@+id/termsAndConditions"
        android:background="#000000"
        android:textColor="#FFFFFF"
        android:drawableLeft="@android:drawable/ic_menu_sort_by_size"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.02"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:singleLine="false" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="  Privacy"
        android:id="@+id/privacy"
        android:background="#000000"
        android:textColor="#FFFFFF"
        android:drawableLeft="@android:drawable/ic_lock_lock"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.02"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:singleLine="false" />

</LinearLayout>